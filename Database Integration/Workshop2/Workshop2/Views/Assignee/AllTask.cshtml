@model Workshop2.Models.AssigneeViewModel

<html xmlns="http://www.w3.org/1999/xhtml">
<head>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">

    <title>Assignee Tasks</title>
</head>
<body>
       
    <h1>@Model.Assignee.Name's tasks: </h1>

<table>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>IsUrgent?</th>
            <th>IsDone?</th>
        </tr>

        @foreach (var item in Model.AllAssigneesTodos)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.IsUrgent</td>
                <td>@item.IsDone</td>
                <td class = "link"><a href= "~/todo/@item.Id/delete">DELETE</a></td>
                <td class = "link"><a href="~/todo/@item.Id/edit">EDIT</a></td>
            </tr>
        }

    </table>

</body>
</html>

<style>

    body{
        font-family: 'Montserrat', sans-serif;
        width: 60%;
        margin-left: auto;
        margin-right: auto;
    }

    td{
        
        border: thin solid green;
        padding-left: 5px;
    }

    th{
        
        font-size:105%;
    }

    table{
        border-collapse: collapse;
        width: 100%;
    }

    .link{
        border: none;
    }

    button{
        border-radius: 5px;
    }

    input{
        border-radius: 5px;
    }

</style>